{
  "rules": {
    "flashcards": {
      "$deckId": {
        ".read": "data.child('visibility').val() == 'public' || data.child('owner').val() == auth.uid",
        ".write": "data.child('owner').val() == auth.uid || (!data.exists() && newData.child('owner').val() == auth.uid)"
      }
    },
    "homepage": {
      "$deckId": {
        ".read": false,
        ".write": "data.child('owner').val() == auth.uid || (!data.exists() && newData.child('owner').val() == auth.uid)"
      }
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "auth.uid == $uid"
      }
    }
  }
}
